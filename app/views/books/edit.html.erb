<h1>Editing Book</h1>
<%= form_with model:@book, local: true do |f| %>
 <div class="field"> 
    <%= f.label :title  %>
     <%= f.text_field :title %>
  </div> 
  <div class="field">
    <%= f.label :body  %>
    <%= f.text_area :body %>
  </div> 
  <div><%= f.submit "Update Book"  %></div>
<% end %>
<%=link_to "Show",book_path(@book.id)%> |
<%=link_to "Back",books_path%>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  